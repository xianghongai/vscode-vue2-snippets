{
	"useRoute": {
		"prefix": "useRoute",
		"body": [
			"const route = useRoute();"
		]
	},
	"useRouter": {
		"prefix": "useRouter",
		"body": [
			"const router = useRouter();"
		]
	},
	"useLink": {
		"prefix": "useLink",
		"body": [
			"const { href, isActive, isExactActive, navigate, route } = useLink({",
			"  to: ${1:'/pathname'}",
			"});"
		],
		"description": "格式和 `<router-link>` 的 `to` prop 一样，能被 `router.resolve` 解析。\n"
	},
	"onBeforeRouteUpdate": {
		"prefix": "onBeforeRouteUpdate",
		"body": [
			"onBeforeRouteUpdate((to, from, next) => {",
			"  next();",
			"});"
		]
	},
	"onBeforeRouteLeave": {
		"prefix": "onBeforeRouteLeave",
		"body": [
			"onBeforeRouteLeave((to, from, next) => {",
			"  next();",
			"});"
		]
	}
}
